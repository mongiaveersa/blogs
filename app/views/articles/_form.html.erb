<div class="container">
    
    
    

    <div class="row justify-content-center">
        <div class="col-10">

            <%= render 'shared/errors' %>
    <%= form_with(model: @article, class:" shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>

    <div class="form-group row d-flex">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of the article" %>
        </div>
    </div>
    <br>
    <div class="form-group row d-flex">
        <%= f.label :description, class: "col-2 col-form-label text-light" %> 
        <div class="col-10">
            <%= f.text_area :description,rows: 10,   class: "form-control shadow rounded", placeholder: "Description of the article" %>
        </div>
    </div>
    <br>

    <div class="form-group d-flex justify-content-center">
        <%= f.submit class:"btn btn-outline-light btn-lg d-flex justify-content-center" %>
    </div>
    <% end %>
    </div>
    <%= link_to 'Return to articles listing', articles_path, class: "d-flex justify-content-center text-info" %>
    </div>
</div>